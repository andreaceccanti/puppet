[SERVICE]
entityId = http://<%= @pdp_host %>/pdp
hostname = <%= @pdp_host %>
port = <%= @pdp_port %>
adminPort = <%= @pdp_admin_port %>
adminPassword = <%= @pdp_admin_password %>

[POLICY]
paps = https://<%= scope.lookupvar("argus::pap::params::pap_host") %>:<%= scope.lookupvar("argus::pap::params::pap_port") %>/pap/services/ProvisioningService
retentionInterval = 240

[SECURITY]
serviceCertificate = <%= @certificate_path %>
servicePrivateKey = <%= @private_key_path %>
trustInfoDir = <%= @trust_info_dir %>
enableSSL = true

